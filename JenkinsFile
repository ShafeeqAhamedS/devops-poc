pipeline {
    agent any
    environment {
        // Define directory variables
        PROJECT_DIR = 'C:/Users/shafe/Downloads/testing'
        TERRAFORM_DIR = "${PROJECT_DIR}/terraform"
        NODEJS_PATH = 'C:/Program Files/nodejs/'
        TERRAFORM_PATH = 'C:/Program Files/Terraform/'

        // Add Node.js directory to PATH
        PATH = "${env.PATH};${TERRAFORM_PATH}"
        PATH = "${env.PATH};${NODEJS_PATH}"
    }
    stages {
        stage('Checkout') {
            steps {
                script {
                    // Navigate to the project directory
                    dir("${PROJECT_DIR}") {
                        git url: 'https://github.com/ShafeeqAhamedS/devops-poc.git', branch: 'main'
                    }
                }
            }
        }
        stage('Prepare Infrastructure') {
            steps {
                script {
                    // Navigate to the Terraform directory and execute Terraform commands
                    dir("${TERRAFORM_DIR}") {
                        bat 'terraform init'
                        bat 'terraform apply -auto-approve'
                    }
                }
            }
        }
        stage('Setup Environment') {
            steps {
                script {
                    // Verify Node.js and npm installation
                    bat 'node -v'
                    bat 'npm -v'
                }
            }
        }
        stage('Build and Serve') {
            steps {
                script {
                    // Run npm commands
                    dir("${PROJECT_DIR}") {
                        bat 'npm install'
                        bat 'npm run build'
                    }
                }
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
